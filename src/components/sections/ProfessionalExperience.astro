---
import CardWrapper from "../CardWrapper.astro";
import { Card,CardTitle, CardDescription } from "../ui/AnimatedCard";
---
<div class="mt-4 w-full max-w-200 ">
  <CardWrapper className="">
    <Card className="bg-transparent">
      <CardTitle>
        Professional experience
      </CardTitle>
      <CardDescription>
                <div class="w-full">
          <ul class="flex items-center justify-between contrast-50">
            <li>
              - Independent Contractor
            </li>
            <li>
              <time datetime="2024-04">April 2025</time> - Present
            </li>
          </ul>
          <p class="p-4 w-full max-w-full">
            Torolololo
          </p>
        </div>
        <div class="w-full">
          <ul class="flex items-center justify-between contrast-50">
            <li>
              - Career Break (Job Hunting)
            </li>
            <li>
              <time datetime="2025-02">February 2025</time> - November 2025
            </li>
          </ul>
          <p class="p-4 w-full max-w-full">
            Relocation and exploring work ventures, traveled above and beyond in Germany.
          </p>
        </div>
        <div>
          <ul class="flex items-center justify-between contrast-50">
            <li>
              - Full stack developer <span class="text-blue-900">@Clarity TXT inc</span>
            </li>
            <li>
              <time datetime="2024-11">November 2024</time> - <time datetime="2025-02">February 2025</time>
